<div class="container">
  <div class="row">
    <div class='small-12 large-12 columns'>
      <div class="small-6 large-6 columns small-offset-3 large-offset-3">
        <input type="text" placeholder="Search for type of clothing">
      </div>
    </div>

    <div class="small-12 large-12 columns">
      <div ng-repeat="item in items" class='theItems small-6 large-3 columns'>
        <div class="card clothes">
          <div class="front">
            <img src="http://placekitten.com/g/400/200" style="height: 280px;">
          </div>
          <div class="back">
          <div class="card-divider">
            <h2>{{item.name}}</h2>
          </div>
          <div class="card-section">
            <div class="small-11 large-11 columns" style="text-align: center;">
              <ul>
                <li>{{item.style}}</li>
                <li>{{item.brands}}</li>
                <li>{{item.compitem}}</li>
              </ul>
              <div id="buttoncenter">
                <button id="addCollection" class="button radius alert" ng-click="addToCollection">Add To Collection</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
